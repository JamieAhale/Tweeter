<!DOCTYPE html>
<html>
  <head>

    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <nav class='navbar'>
      <div class='navbar-left'>
        <a href="<%= tweets_path %>">Tweeter</a>
      </div>
      
      <div class='navbar-right'>
        <% if user_signed_in? && current_user.profile_picture.attached? %>
          <%= image_tag current_user.profile_picture.variant(resize: "30x30"), class: 'rounded-avatar' %>
        <% end %>
    
        <% if user_signed_in? %>
          <%= link_to 'View Account', edit_user_registration_path, class: 'btn btn-info' %>
          <%= button_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'btn btn-danger' %>
        <% end %>
      </div>
    </nav>
      <p class="notice"><%= notice %></p> 
      <p class="alert"><%= alert %></p> 
      <%= yield %>
  </body>
</html>
